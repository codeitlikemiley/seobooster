{
    "extends": [
        "standard",
        "plugin:vue/recommended"
    ],
    "settings": {
        "html/html-extensions": [
            ".html"
        ],
        "html/report-bad-indent": "error"
    },
    "plugins": [
        "html"
    ],
    "rules": {
        "no-undef": 1,
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "app",
                "args": "after-used",
                "argsIgnorePattern": "^_",
                "ignoreRestSiblings": true
            }
        ],
        "no-use-before-define": [1, {"functions": true, "classes": true, "variables": true}],
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ]
        
    },
    "globals": {
        "axios": true,
        "Vue": true,
        "vm": true,
        "vueAuth": true,
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 7,
        "sourceType": "module"
    }
}